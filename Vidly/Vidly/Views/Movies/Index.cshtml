@using Vidly.Models;

@model IEnumerable<Movie>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>Movie</th>
    </tr>
    @foreach (Movie m in Model)
    {
        <tr>
            <td>@m.Name</td>
        </tr>
    }
</table>
