@using Vidly.Models;

@model IEnumerable<Movie>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@Html.ActionLink("NEW MOVIE", "New", new { }, new { @class = "btn btn-primary" })

<br />
<br />
<table id="movies-table" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Movie m in Model)
        {
            <tr>
                <td>@Html.ActionLink(m.Name, "Edit", new { id = m.Id })</td>
                <td>@m.Genre.Name</td>
                <td>Delete link</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#movies-table").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    { data: "name" },
                    { data: "genreId" },
                    { defaultContent: "Delete link!"}
                ]
            });
        });
    </script>
}
