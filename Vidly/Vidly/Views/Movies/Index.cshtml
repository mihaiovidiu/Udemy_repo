@using Vidly.Models;

@model IEnumerable<Movie>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@Html.ActionLink("NEW MOVIE", "MovieForm", "Movies", new { @class = "btn btn-primary" })

<br />
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>Movie</th>
        <th>Genre</th>
    </tr>
    @foreach (Movie m in Model)
    {
        <tr>
            <td>@Html.ActionLink(m.Name, "Details", new { id = m.Id })</td>
            <td>@m.Genre.Name</td>
        </tr>
    }
</table>
